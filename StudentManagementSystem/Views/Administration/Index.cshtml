@model IList<RoleListViewModel>

@{
    ViewData["Title"] = "List of Roles";
}

<a asp-controller="Administration" asp-action="Create" class="btn btn-primary mb-3">Add New Role</a>

<h3 class="text-center">List of Roles</h3>

@foreach (var role in Model)
{
    <div class="d-flex justify-content-center">
        <div class="col-md-8 mb-2">
            <div class="card">
                <div class="card-header bg-primary">
                    <h5 class="lead text-white fw-light">Role Id: @role.Id</h5>
                </div>

                <div class="card-body">
                    <h6 class="lead">@role.RoleName</h6>
                </div>

                <div class="card-footer text-center">
                    <a href="#" class="btn btn-primary col-md-2">Edit</a>
                    <a href="#" class="btn btn-danger col-md-2">Delete</a>
                </div>
            </div>
        </div>
    </div>
}