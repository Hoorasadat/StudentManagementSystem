@model CreateRoleViewModel

@{
    ViewData["Title"] = "Create New Role";
}

<h3 class="text-center">Create New Role</h3>

<form method="post" asp-controller="Administration" asp-action="Create">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row mt-3 mb-3">
        <label asp-for="RoleName" class="col-form-label col-md-2"></label>
        <div class="col-md-6">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <a asp-controller="Administration" asp-action="Index" class="btn btn-secondary col-md-2 me-3">Cancel</a>
        <button type="submit" class="btn btn-primary col-md-2">Create Role</button>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}