@model EditStudentViewModel

@{
    ViewData["Title"] = "Edit Student";
}

<h3 class="text-center text-primary fw-bold">@($"Updating {Model.FirstName} {Model.LastName}")</h3>

<form method="post" asp-controller="Students" asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Id" hidden/>
    <input asp-for="ExistingPhoto" hidden />

    <div class="row">
        <label asp-for="FirstName" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="Initials" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="Initials" class="form-control" />
            <span asp-validation-for="Initials" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="LastName" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="EnrollmentDate" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="EnrollmentDate" class="form-control" />
            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="Gender" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <select asp-for="Gender" class="form-control form-select" asp-items="Html.GetEnumSelectList<Gender>()">
                <option value=""> Select Gender</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="Photo" class="col-form-label col-md-2"></label>
        <div class="col-md-6">
            <input asp-for="Photo" class="form-control" />
        </div>
    </div>

    <div class="row">
        <button type="submit" class="btn btn-primary col-md-2 ms-2 me-2">Update</button>
        <a asp-controller="Students" asp-action="index" class="btn btn-secondary col-md-2 ms-2 me-2">Cancel</a>
    </div>

</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}