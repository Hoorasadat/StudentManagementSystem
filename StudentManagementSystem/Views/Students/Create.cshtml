@model StudentManagementSystem.WEB.ViewModels.CreateStudentViewModel
@{
    ViewData["Title"] = "Create Student";
}

<h3 class="text-center text-primary fw-bold">Create New Student</h3>
<form method="POST" asp-action="students" asp-action="create">
    <div class="row">
        <label asp-for="FirstName" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="FirstName" class="form-control" />
        </div>
    </div>
    <div class="row">
        <label asp-for="LastName" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="LastName" class="form-control" />
        </div>
    </div>
    <div class="row">
        <label asp-for="Initials" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="Initials" class="form-control" />
        </div>
    </div>
    <div class="row">
        <label asp-for="EnrollmentDate" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="EnrollmentDate" class="form-control" />
        </div>
    </div>
    <div class="row">
        <label asp-for="Gender" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <select asp-for="Gender" class="form-control form-select" asp-items="Html.GetEnumSelectList<Gender>()">
                <option value=""> Select Gender</option>
            </select>
        </div>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-primary col-md-2 ms-2 me-2">Create</button>
        <a href="#" class="btn btn-secondary col-md-2 ms-2 me-2">Cancel</a>
    </div>

</form>